         <pb n="Charta 22 recto" facs="https://info.slis.indiana.edu/~jawalsh/petrarchive/images/vat-lat3195-f/vat-lat3195-f-022r.jpg" />
         <lg type="sonnet" n="102">
            <lg type="dblhemi" corresp="#msline">
               <l n="1"><hi rendition="#red #fs24pt"
                  >C</hi><hi rendition="#small-caps">e</hi>sare<reg>,</reg> poi che<reg> ’</reg>l traditor <choice><orig>degitto</orig><reg>d’Egitto</reg></choice></l>
               <l n="2">Li fece il don de l<reg>’</reg>onorata testa<reg>,</reg></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="3">Celando <choice><orig>lallegreçça</orig><reg>l’allegrezza</reg></choice> manifesta<reg>,</reg></l>
               <l n="4">Pianse per <choice><orig>gliocchi</orig><reg>gli occhi</reg></choice> fuor <choice><orig>si</orig><reg>sì</reg></choice> come <choice><orig>e</orig><reg>è</reg></choice> scritto.</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="5">Et <choice><orig>hanibal</orig><reg>Hanibal</reg></choice><choice><orig> /</orig><reg>,</reg></choice> quando a l<reg>’</reg>imperio afflitto</l>
               <l n="6">Vide farsi fortuna <choice><orig>si</orig><reg>sì</reg></choice> molesta<choice><orig> /</orig><reg>,</reg></choice></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="7">Rise fra gente lagrimosa &amp7; mesta</l>
               <l n="8">Per isfogare il suo acerbo despitto.</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="9">Et <choice><orig>cosi</orig><reg>così</reg></choice> <choice><orig>auen</orig><reg>aven</reg></choice> che l<reg>’</reg>animo ciascuna</l>
               <l n="10">Sua passion sotto<reg> ’</reg>l contrario manto</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="11">Ricopre co la <choice><orig>uista</orig><reg>vista</reg></choice> or chiara <choice><orig>/</orig><reg></reg></choice> or bruna.</l>
               <l n="12"><choice><abbr>ꝑo</abbr><expan><choice><orig>Pero</orig><reg>Però</reg></choice></expan></choice> s<reg>’</reg>alcuna <choice><orig>uolta</orig><reg>volta</reg></choice> io rido <choice><orig>/</orig><reg></reg></choice> o canto<reg>,</reg></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="13">Facciol <choice><orig>/</orig><reg></reg></choice> perch<reg>’</reg>i<reg>’</reg> non <choice><orig>o</orig><reg>ò</reg></choice> se non quest<reg>’</reg>una</l>
               <l n="14">Via da celare il mio angoscioso <choice><abbr>piāto</abbr><expan>pianto</expan></choice>.</l>
            </lg>
            <space corresp="#msline"/>
         </lg>
         <lg type="sonnet" n="103">
            <lg type="dblhemi" corresp="#msline">
               <l n="1"><hi rendition="#blue #fs24pt"
                  ></hi><choice><orig>U</orig><reg>V</reg></choice><hi rendition="#small-caps">i</hi>nse <choice><orig>hanibal</orig><reg>Hanibal</reg></choice><choice><orig>.</orig><reg>,</reg></choice> et non seppe usar poi</l>
               <l n="2">Ben la <choice><orig>uittoriosa</orig><reg>vittoriosa</reg></choice> sua <choice><orig>uentura</orig><reg>ventura</reg></choice><choice><orig>.</orig><reg>;</reg></choice></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="3"><choice><orig>Pero</orig><reg>Però</reg></choice><reg>,</reg> signor mio caro<reg>,</reg> aggiate cura<choice><orig>.</orig><reg></reg></choice></l>
               <l n="4">Che similmente non <choice><orig>auegna</orig><reg>avegna</reg></choice> a <choice><orig>uoi</orig><reg>voi</reg></choice>.</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="5">L<reg>’</reg>orsa<reg>,</reg> rabbiosa per gli orsacchi suoi<choice><orig> /</orig><reg>,</reg></choice></l>
               <l n="6">Che <choice><orig>trouaron</orig><reg>travaron</reg></choice> di maggio aspra pastura<choice><orig>.</orig><reg>,</reg></choice></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="7">Rode <choice><orig>se</orig><reg>sé</reg></choice> dentro<choice><orig>.</orig><reg>,</reg></choice> <choice><orig>ei</orig><reg>e i</reg></choice> <choice><abbr>dēti</abbr><expan>denti</expan></choice> &amp7; 
                  l<reg>’</reg>unghie endura</l>
               <l n="8">&Per; <choice><orig>uendicar</orig><reg>vendicar</reg></choice> suoi danni sopra noi.</l> 
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="9">Mentre<reg> ’</reg>l <choice><orig>nouo</orig><reg>novo</reg></choice> dolor dunque l<reg>’</reg>accora<reg>,</reg></l>
               <l n="10">Non riponete l<reg>’</reg>onorata spada<choice><orig>.</orig><reg>,</reg></choice></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="11"><choice><orig>Ançi</orig><reg>Anzi</reg></choice> seguite <choice><orig>la</orig><reg>là</reg></choice> <choice><orig>doue</orig><reg>dove</reg></choice> <choice><orig>ui</orig><reg>vi</reg></choice> chiama</l>
               <l n="12">Vostra fortuna dritto per la strada</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="13">Che <choice><orig>ui</orig><reg>vi</reg></choice> <choice><orig>puo</orig><reg>può</reg></choice> dar<reg>,</reg> dopo la morte <choice><abbr>āchora</abbr><expan>anchora</expan></choice></l>
               <l n="14">Mille &amp7; mille <choice><abbr>āni</abbr><expan>anni</expan></choice><reg>,</reg> al 
                  <choice><abbr>mōdo</abbr><expan>mondo</expan></choice> honor &amp7; fama.</l>
            </lg>
         </lg> 
         <space corresp="#msline"/>
         <lg type="sonnet" n="104">
            <lg type="dblhemi" corresp="#msline">
               <l n="1"><hi rendition="#red #fs24pt"
                  >L</hi><reg>’</reg><hi rendition="#small-caps">a</hi>spectata <choice><orig>uertu</orig><reg>vertù</reg></choice><reg>,</reg> che<reg> ’</reg>n <choice><orig>uoi</orig><reg>voi</reg></choice> <choice><orig>fioriua</orig><reg>fioriva</reg></choice></l>
               <l n="2">Quando <choice><orig>amor</orig><reg>Amor</reg></choice> <choice><orig>comincio</orig><reg>cominciò</reg></choice> <choice><orig>darui</orig><reg>darvi</reg></choice> <choice><orig>bataglia</orig><reg>bat[t]aglia</reg></choice><reg>,</reg></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="3">Produce or frutto che quel fiore aguaglia<choice><orig> /</orig><reg>,</reg></choice></l>
               <l n="4">Et che mia speme fa <choice><orig>uenire</orig><reg>venire</reg></choice> a <choice><orig>riua</orig><reg>riva</reg></choice>.</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="5"><choice><abbr>ꝑo</abbr><expan><choice><orig>Pero</orig><reg>Però</reg></choice></expan></choice> mi dice il <choice><orig>core</orig><reg>cor</reg></choice> ch<reg>’</reg>io in carte <choice><orig>scriua</orig><reg>scriva</reg></choice></l>
               <l n="6">Cosa onde<reg> ’</reg>l <choice><orig>uostro</orig><reg>vostro</reg></choice> nome <choice><abbr>ī</abbr><expan>in</expan></choice> pregio saglia<reg>,</reg></l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="7">Che<reg> ’</reg>n nulla parte <choice><orig>si</orig><reg>sì</reg></choice> saldo s<reg>’</reg>intaglia</l>
               <l n="8">Per far di marmo una persona <choice><orig>uiua</orig><reg>viva</reg></choice>.</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="9">Credete <choice><orig>uoi</orig><reg>voi</reg></choice> che Cesare <choice><orig>/</orig><reg></reg></choice> o Marcello</l>
               <l n="10">O <choice><orig>paolo</orig><reg>Paolo</reg></choice> <choice><orig>/</orig><reg></reg></choice> <choice><orig>odaffricanọ</orig><reg>od Affrican</reg></choice> fossin cotali</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="11">&Per; incude giamai<choice><orig> /</orig><reg>,</reg></choice> <choice><orig>ne</orig><reg>né</reg></choice> per martello<choice><orig>.</orig><reg>?</reg></choice></l>
               <l n="12">Pandolfo mio<reg>,</reg> quest<reg>’</reg>opere son frali</l>
            </lg>
            <lg type="dblhemi" corresp="#msline">
               <l n="13"><choice><orig>Al <choice><abbr>lūgo</abbr><expan>lungo</expan></choice></orig><reg>A llungo</reg></choice> andar<choice><orig>.</orig><reg>,</reg></choice> ma<reg> ’</reg>l nostro studio <choice><orig>e</orig><reg>è</reg></choice> &quello;</l>
               <l n="14">Che fa &per; fama <choice><orig>gliuomini</orig><reg>gli uomini</reg></choice> <choice><abbr>īmortali</abbr><expan>immortali</expan></choice>.</l>
            </lg>
         </lg>
