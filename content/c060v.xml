      <body>
         <pb n="charta 60 verso" facs="../images/vat-lat3195-f/vat-lat3195-f-60v.jpg" /> <!-- Change the number of the charta in both places "charta 1 verso" and -f-0001v.jpg", according to the charta to be encoded -->
          <lg type="sonnet" xml:id="rvf305" n="305"> <!-- Change the sonnet xml:id and number according to the sonnet to be encoded -->
              <lg type="octave">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="1"><hi rendition="#red #fs24pt">A</hi><hi rendition="#small-caps">n</hi>ima bella da quel nodo sciolta<!-- rest of the line --></l> <!-- Change initial color (red or blue) according to the initiasl of the sonnet to be encoded -->
                      <l n="2">Che <choice><orig>piu</orig><reg>più</reg></choice> bel mai non seppe ordir natura<choice><orig> &virg;</orig><reg>,</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="3"><choice><orig>Pon</orig><reg>Pon’</reg></choice> dal ciel mente a la mia <choice><orig>uita</orig><reg>vita</reg></choice> oscura<choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="4">Da <choice><orig>si</orig><reg>sì</reg></choice> lieti pensieri a pianger <choice><orig>uolta</orig><reg>volta</reg></choice><supplied>.</supplied></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="5">La falsa opinion dal cor <choice><orig>se</orig><reg>s’è</reg></choice> tolta<choice><orig> &virg;</orig><reg>,</reg></choice></l>
                      <l n="6">Che mi fece alcun tempo acerba &amp7; dura</l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="7">Tua dolce <choice><orig>uista</orig><reg>vista</reg></choice><choice><orig> .</orig><reg>;</reg></choice> omai tutta secura</l>
                      <l n="8">Volgi a me <choice><orig>gliocchi</orig><reg>gli occhi</reg></choice><choice><orig> .</orig><reg>,</reg></choice> e i miei sospiri ascolta<choice><orig> .</orig><reg>.</reg></choice></l>
                  </lg>
              </lg>
              <lg type="sestet">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="9"><hi rendition="#sestet_maker">~</hi> <choice><orig>Miral</orig><reg>Mira ’l</reg></choice> gran sasso<supplied>,</supplied> donde Sorga nasce<choice><orig> .</orig><reg>,</reg></choice></l> <!-- check beginning all lines 9 -->
                      <l n="10">Et <choice><orig>uedraui</orig><reg>vedra’vi</reg></choice> un<choice><orig> &virg;</orig><reg></reg></choice> che sol tra <choice><orig>lerbe</orig><reg>l’erbe</reg></choice> &amp7; <choice><orig>lacque</orig><reg>l’acque</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="11">Di tua memoria<choice><orig> &virg;</orig><reg></reg></choice> &amp7; di dolor si pasce<choice><orig> .</orig><reg>.</reg></choice></l>
                      <l n="12"><choice><orig>Oue</orig><reg>Ove</reg></choice> giace il tuo albergo<choice><orig> .</orig><reg>,</reg></choice> &amp7; <choice><orig>doue</orig><reg>dove</reg></choice> nacque</l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="13">Il nostro amor<choice><orig> &virg;</orig><reg>,</reg></choice> <choice><orig>uo</orig><reg>vo’</reg></choice> <choice><orig>chabbandoni</orig><reg>ch’ abbandoni</reg></choice><choice><orig> &virg;</orig><reg></reg></choice> &amp7; lasce<choice><orig> &virg;</orig><reg>,</reg></choice></l>
                      <l n="14">Per &non; <choice><orig>ueder</orig><reg>veder</reg></choice> <choice><orig>ne</orig><reg>ne’</reg></choice> tuoi quel <choice><orig>cha</orig><reg>ch’ a</reg></choice> te spiacque<choice><orig> .</orig><reg>.</reg></choice>
                    </l>
                  </lg>
              </lg>
          </lg>
          <space corresp="#canvasline"/>
          <lg xml:id="rvf306" type="sonnet" n="306"> <!-- Change the sonnet xml:id and number according to the sonnet to be encoded -->
              <lg type="octave">
