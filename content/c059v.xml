                      <l n="1"><hi rendition="#red #fs24pt">D</hi><hi rendition="#small-caps">v</hi>e gran nemiche inseme erano <choice><orig>a&#x32d;<choice><abbr>giūte</abbr><expan>giunte</expan></choice></orig><reg>agiunte</reg></choice><supplied>,</supplied></l> <!-- COMBINING CIRCUMFLEX ACCENT BELOW: https://www.fileformat.info/info/unicode/char/032d/index.htm For non combined: &#x2F0; -->
                      <l n="2"><choice><orig>Belleçça</orig><reg>Bellezza</reg></choice> &amp7; <choice><orig>honesta</orig><reg>honestà</reg></choice><choice><orig> &virg;</orig><reg>,</reg></choice> &con; pace tanta<choice><orig> .</orig><reg>,</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="3">Che mai¦r<subst><del type="erasure"><gap reason="illegible"/></del><add>e</add></subst>bellion <choice><orig>lanima</orig><reg>l’anima</reg></choice> santa</l>
                      <l n="4">Non <choice><orig>senti</orig><reg>sentì</reg></choice> poi<choice><orig> &virg;</orig><reg></reg></choice> <choice><orig>cha</orig><reg>ch’ a</reg></choice> star seco fur giunte<supplied>;</supplied></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="5">Et or &per; morte son sparse &amp7; <choice><abbr>disgiūte</abbr><expan>disgiunte</expan></choice><choice><orig> .</orig><reg>;</reg></choice></l>
                      <l n="6"><choice><orig>Luna</orig><reg>L’una</reg></choice> <choice><orig>e</orig><reg>è</reg></choice> nel ciel<choice><orig> &virg;</orig><reg>,</reg></choice> che se ne gloria <choice><orig>&virg;</orig><reg></reg></choice>&amp7; <choice><orig><choice><abbr>uāta</abbr><expan>uanta</expan></choice></orig><reg>vanta</reg></choice><choice><orig> .</orig><reg>;</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="7"><choice><orig>Laltra</orig><reg>L’altra</reg></choice> sotterra<choice><orig> &virg;</orig><reg>,</reg></choice> che <choice><orig>begliocchi</orig><reg>begli occhi</reg></choice> <choice><abbr>amāta</abbr><expan>amanta</expan></choice><choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="8">Onde uscir <choice><orig>gia</orig><reg>già</reg></choice> <choice><orig>tantamorose</orig><reg>tant’amorose</reg></choice> punte<choice><orig> .</orig><reg>.</reg></choice></l>
                  </lg>
              </lg>
              <lg type="sestet">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="9"><choice><orig>Latto</orig><reg>L’atto</reg></choice> <choice><orig>soaue</orig><reg>soave</reg></choice><choice><orig> &virg;</orig><reg>,</reg></choice> <choice><orig>el</orig><reg>e ’l</reg></choice> parlar saggio humile</l>
                      <l n="10">Che <choice><orig>mouea</orig><reg>movea</reg></choice> <choice><orig>dalto</orig><reg>d’alto</reg></choice> loco <choice><orig>&virg; </orig><reg></reg></choice><choice><orig>el</orig><reg>e ’l</reg></choice> dolce sguardo</l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="11">Che <choice><orig>piagaua</orig><reg>piagava</reg></choice> il mio core <subst><del type="erasure"><gap reason="illegible"/></del><add><choice><orig> &virg;</orig><reg>,</reg></choice> anc</add></subst>hor <choice><orig><choice><abbr>lacēna</abbr><expan>lacenna</expan></choice></orig><reg>l’accenna</reg></choice><choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="12">Sono spariti. &amp7; sal seguir son tardo <g ref="#virgsusp"/></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="13">Forse <choice><orig>auerra</orig><reg>averrà</reg></choice><choice><orig> &virg;</orig><reg></reg></choice> <choice><orig>chel</orig><reg>che ’l</reg></choice> bel nome gentile</l>
