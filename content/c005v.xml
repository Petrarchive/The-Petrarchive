      <body>
         <pb n="charta 5 verso" facs="../images/vat-lat3195-f/vat-lat3195-f-005v.jpg" />
         <lg xml:id="rvf025" type="sonnet" n="25">
           <lg type="octave">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="1"><hi rendition="#red #fs24pt">A</hi><hi rendition="#small-caps">m</hi>or <choice><orig>piangeua</orig><reg>piangeva</reg></choice>&p2c; &amp7; io &con; lui <choice><orig>tal uolta</orig><reg>talvolta</reg></choice><supplied>,</supplied></l>
               <l n="2">Dal qual miei passi &non; fur mai lontani&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="3">Mirando per gli effecti acerbi &amp7; strani</l>
               <l n="4"><choice><orig>Lanima</orig><reg>L’anima</reg></choice> <choice><orig>uostra</orig><reg>vostra</reg></choice> de<supplied>’</supplied> suoi nodi sciolta.</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="5">Or <choice><orig>chal</orig><reg>ch’al</reg></choice> dritto camin <choice><orig>ladio</orig><reg>l’à Dio</reg></choice> <choice><orig>riuolta</orig><reg>rivolta</reg></choice><supplied>,</supplied></l>
               <l n="6">Col cor <choice><orig>leuando</orig><reg>levando</reg></choice> al cielo <choice><abbr>ābe</abbr><expan>ambe</expan></choice> le mani<supplied>,</supplied></l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="7">Ringratio lui che <supplied>’</supplied> giusti preghi humani</l>
               <l n="8"><choice><abbr>Benignamēte</abbr><expan>Benignamente</expan></choice><supplied>,</supplied> sua mercede<supplied>,</supplied> ascolta.</l>
            </lg>
           </lg>
           <lg type="sestet">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="9">Et se tornando a <choice><orig>lamorosa</orig><reg>l’amorosa</reg></choice> <choice><orig>uita</orig><reg>vita</reg></choice><supplied>,</supplied></l>
               <l n="10">Per <choice><orig>farui</orig><reg>farvi</reg></choice> al bel desio <choice><orig>uolger</orig><reg>volger</reg></choice> le spalle&v2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="11"><choice><orig>Trouaste</orig><reg>Trovaste</reg></choice> &per; la &uia; fossati o poggi&v2c;</l>
               <l n="12">Fu per mostrar &quanto; &e; spinoso calle&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="13">Et &quanto; alpestra et dura la salita<supplied>,</supplied></l>
               <l n="14">Onde al <choice><orig>uero</orig><reg>vero</reg></choice> <choice><orig>ualor</orig><reg>valor</reg></choice> <choice><orig><abbr>cōuen</abbr><expan>conuen</expan></orig><reg>conven</reg></choice> <choice><orig>chuom</orig><reg>ch’uom</reg></choice> poggi.</l>
            </lg>
           </lg>
         </lg>
         <space corresp="#canvasline"/>
         <lg xml:id="rvf026" type="sonnet" n="26">
            <lg type="octave">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="1"><choice><orig><hi rendition="#blue #fs24pt">P</hi><hi rendition="#small-caps">i</hi>u</orig><reg><hi rendition="#blue #fs24pt">P</hi><hi rendition="#small-caps">i</hi>ù</reg></choice> di me lieta non si <choice><orig>uede</orig><reg>vede</reg></choice> a terra</l>
               <l n="2"><choice><orig>Naue</orig><reg>Nave</reg></choice> da <choice><orig>londe</orig><reg>l’onde</reg></choice> combattuta et <choice><orig>uinta</orig><reg>vinta</reg></choice>&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="3">Quando la gente di <choice><orig>pieta</orig><reg>pietà</reg></choice> depinta</l>
               <l n="4">Su per la <choice><orig>riua</orig><reg>riva</reg></choice> a ringratiar <choice><orig>satterra</orig><reg>s’atterra</reg></choice>&p2semicolon;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="5"><choice><orig>Ne</orig><reg>Né</reg></choice> lieto &piu; del carcer si diserra</l>
               <l n="6">Chi <supplied>’</supplied>ntorno al collo ebbe la corda <choice><orig>auinta</orig><reg>avinta</reg></choice>&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="7">Di me&v2c; <choice><orig><abbr>ueggēdo</abbr><expan>ueggendo</expan></orig><reg>veggendo</reg></choice> quella spada scinta</l>
               <l n="8">Che fece al segnor mio &si; <choice><abbr>lūga</abbr><expan>lunga</expan></choice> guerra.</l>
            </lg>
            </lg>
            <lg type="sestet">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="9">Et tutti <choice><orig>uoi</orig><reg>voi</reg></choice> <choice><orig>chamor</orig><reg>ch’Amor</reg></choice> laudate &in; rima<supplied>,</supplied></l>
               <l n="10">Al buon testor <choice><orig>de gliamorosi</orig><reg>degli amorosi</reg></choice> detti</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="11">Rendete honor<supplied>,</supplied> <choice><orig>chera</orig><reg>ch’era</reg></choice> smarrito <choice><orig><abbr>īp&#830;ma</abbr><expan>inprima</expan></orig><reg>in prima</reg></choice>&p2semicolon;</l>
               <l n="12"><choice><orig>Che</orig><reg>Ché</reg></choice> &piu; gloria <choice><orig>&#11805;</orig><reg/></choice> &e; <choice><orig>&#11805;</orig><reg/></choice> nel regno <choice><orig>de gli</orig><reg>degli</reg></choice> electi</l> <!-- isabella: check the low slashes!!! -->
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="13"><choice><orig>Dun</orig><reg>D’un</reg></choice> spirito <choice><orig><abbr>cōuerso</abbr><expan>conuerso</expan></orig><reg>converso</reg></choice>&p2c; &amp7; &piu; <choice><orig>sestima</orig><reg>s’estima</reg></choice><choice><orig> &#11805;</orig><reg>,</reg></choice></l>
               <l n="14">Che di <choice><orig>nouanta noue</orig><reg>novantanove</reg></choice> altri perfecti.</l>
            </lg>  
            </lg>
         </lg>
         <space corresp="#canvasline"/>
         <lg xml:id="rvf027" type="sonnet" n="27">
          <lg type="octave">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="1"><hi rendition="#red #fs24pt">I</hi><hi rendition="#small-caps">l</hi> successor di <choice><orig>karlo</orig><reg>Karlo</reg></choice><supplied>,</supplied>  che la chioma</l>
               <l n="2">Co la corona del suo antiquo adorna<supplied>,</supplied></l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="3">Prese <choice><orig>a</orig><reg>à</reg></choice> <choice><orig>gia</orig><reg>già</reg></choice> <choice><orig>larme</orig><reg>l’arme</reg></choice> &per; fiacchar le corna</l>
               <l n="4">A <choice><orig>babilonia</orig><reg>Babilonia</reg></choice>&v2c; et chi da lei si noma.</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="5"><choice><orig>El</orig><reg>E ’l</reg></choice> <choice><orig>uicario</orig><reg>vicario</reg></choice> de <choice><abbr>xp&#769;o</abbr><expan>Christo</expan></choice> colla soma</l>
               <l n="6">De le <choice><orig>chiaui</orig><reg>chiavi</reg></choice><choice><orig> &virg;</orig><reg/></choice> et del manto al nido torna&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="7">&Si; che<supplied>,</supplied> <choice><orig>saltro</orig><reg>s’altro</reg></choice> accidente nol distorna&v2c;</l>
               <l n="8"><choice><orig>Vedra</orig><reg>Vedrà</reg></choice> <choice><orig>bologna</orig><reg>Bologna</reg></choice>&p2c; &amp7; poi la nobil <choice><orig>roma</orig><reg>Roma</reg></choice>.</l>
            </lg>
          </lg>
            <lg type="sestet">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="9">La mansueta <choice><orig>uostra</orig><reg>vostra</reg></choice> &amp7; gentil agna</l>
               <l n="10">Abbatte i fieri lupi&p2colon; et <choice><orig>cosi</orig><reg>così</reg></choice> <choice><orig>uada</orig><reg>vada</reg></choice></l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="11">Chiunque amor legitimo <choice><abbr>scōpagna</abbr><expan>scompagna</expan></choice>.</l>
               <l n="12">Consolate lei dunque <choice><orig>chanchor</orig><reg>ch’anchor</reg></choice> bada&p2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="13">Et <choice><orig>roma</orig><reg>Roma</reg></choice> che del suo sposo si lagna&p2c;</l>
               <l n="14">Et per <choice><orig><abbr>Jh&#7630;u</abbr><expan>Ihesu</expan></orig><reg>Ihesù</reg></choice> cingete omai la spada.</l>
            </lg>
            </lg>
         </lg>
         <space corresp="#canvasline"/>
         <lg xml:id="rvf028" type="canzone" n="28">
           <lg type="stanza">
            <lg type="dblvrs" corresp="#canvasline">
               <l n="1"><choice><orig><hi rendition="#fs24pt #blue">O</hi><hi rendition="#small-caps">a</hi>spectata</orig><reg><hi rendition="#fs24pt #blue">O</hi> <hi rendition="#small-caps">a</hi>spectata</reg></choice> in ciel<supplied>,</supplied> beata et bella</l>
               <l n="2">Anima che di nostra humanitade</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="3">Vestita &uai;&v2c; non come <choice><orig>laltre</orig><reg>l’altre</reg></choice> carca&p2semicolon;</l>
               <l n="4"><choice><orig>&Per;che</orig><reg>Perché</reg></choice> ti sian men dure omai le strade<supplied>,</supplied></l> <!-- isabella: check the comma in the diplomatic? -->
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="5">A <choice><orig>dio</orig><reg>Dio</reg></choice> dilecta&v2c; obediente ancella&p2c;</l>
               <l n="6">Onde al suo regno di qua <choice><orig>giu</orig><reg>giù</reg></choice> si <choice><orig>uarca</orig><reg>varca</reg></choice><supplied>,</supplied></l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="7">Ecco <choice><orig>nouellamente</orig><reg>novellamente</reg></choice> a la tua barca<supplied>,</supplied></l>
               <l n="8"><choice><orig>Chal</orig><reg>Ch’al</reg></choice> cieco <choice><abbr>mōdo</abbr><expan>mondo</expan></choice> <choice><orig>a</orig><reg>à</reg></choice> <choice><orig>gia</orig><reg>già</reg></choice> &uolte; le spalle<choice><orig> &virg;</orig><reg/></choice></l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="9">Per gir al miglior porto&p2c;</l>
               <l n="10"><choice><orig>Dun</orig><reg>D’un</reg></choice> <choice><orig>uento</orig><reg>vento</reg></choice> occidental dolce conforto&v2c;</l>
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="11">Lo qual per <choice><orig>meçço</orig><reg>mezzo</reg></choice> questa oscura <choice><orig>ualle</orig><reg>valle</reg></choice>&v2c;</l>
               <l n="12"><choice><orig>Oue</orig><reg>Ove</reg></choice> <choice><abbr>piāgiamo</abbr><expan>piangiamo</expan></choice> il <choice><abbr>nost<add>o</add></abbr><expan>nostro</expan></choice><choice><orig> &virg;</orig><reg/></choice> &amp7; <choice><orig>laltrui</orig><reg>l’altrui</reg></choice> torto<choice><orig> .</orig><reg>,</reg></choice></l> <!-- isabella: check space before punctus -->
            </lg>
            <lg type="dblvrs" corresp="#canvasline">
               <l n="13">La <choice><orig>condurra</orig><reg>condurrà</reg></choice> de<supplied>’</supplied> lacci antichi sciolta</l>
               <l n="14">Per dritissimo calle<choice><orig> <g ref="#virgsusp"/></orig><reg>,</reg></choice></l>
            </lg>
           </lg>
         </lg>
