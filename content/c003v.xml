      <body>
        <pb n="charta 3 verso" facs="../images/vat-lat3195-f/vat-lat3195-f-003v.jpg" />
              <lg xml:id="rvf021" type="sonnet" n="21">
                <lg type="octave">
                <lg type="dblvrs"><l n="1"><hi rendition="#red #fs24pt">M</hi><hi rendition="#small-caps">i</hi>lle fiate<supplied>,</supplied> o dolce mia guerrera<supplied>,</supplied></l>	
                  <l n="2">Per <choice><orig>auer</orig><reg>aver</reg></choice> co<supplied>’</supplied> <choice><orig>be gliocchi</orig><reg>begli occhi</reg></choice> <choice><orig>uostri</orig><reg>vostri</reg></choice> pace</l></lg>
                <lg type="dblvrs"><l n="3"><choice><orig>Vaggio</orig><reg>V’ aggio</reg></choice> proferto il cor&p2semicolon; <choice><orig>ma uoi</orig><reg>m’ a voi</reg></choice> &non; piace</l>		
               <l n="4">Mirar &si; basso <choice><orig>collamente</orig><reg>colla mente</reg></choice> altera.</l></lg>
            <lg type="dblvrs"><l n="5">Et se di lui <choice><orig>forsaltra</orig><reg>fors’ altra</reg></choice> donna spera&v2c;</l> 
               <l n="6"><choice><orig>Viue</orig><reg>Vive</reg></choice> in <choice><orig>sperança</orig><reg>speranza</reg></choice> debile et fallace&p2colon;</l>
            </lg>
            <lg type="dblvrs"><l n="7">Mio<supplied>,</supplied> <choice><orig>ꝑche</orig><reg>perché</reg></choice> sdegno <choice><orig>cio</orig><reg>ciò</reg></choice> <choice><orig>cha</orig><reg>ch’ a</reg></choice> <choice><orig>uoi</orig><reg>voi</reg></choice> dispiace<supplied>,</supplied></l>	 
               <l n="8">Esser &non; <choice><orig>puo</orig><reg>può</reg></choice> giamai <choice><orig>cosi</orig><reg>così</reg></choice> <choice><orig>comera</orig><reg>com’ era</reg></choice>.</l>
            </lg>
                </lg>
                <lg type="sestet">
            <lg type="dblvrs"><l n="9">Or <choice><orig>sio</orig><reg>s’io</reg></choice> lo scaccio&p2c; et <choice><orig><abbr>enō</abbr><expan>enon</expan></orig><reg>e’ non</reg></choice> <choice><orig>troua</orig><reg>trova</reg></choice> in <choice><orig>uoi</orig><reg>voi</reg></choice></l> 
               <l n="10"><choice><orig>Nel exilio</orig><reg>Ne l’exilio</reg></choice> infelice alcun soccorso&p2c;</l>
            </lg>
            <lg type="dblvrs"><l n="11"><choice><orig>Ne</orig><reg>Né</reg></choice> sa star sol&p2c; <choice><orig>ne</orig><reg>né</reg></choice> gire <choice><orig>oualtri</orig><reg>ov’ altri</reg></choice> il chiama&p2c;</l> 
               <l n="12">Poria smarrire il suo <choice><orig>natǎl</orig><reg>natural</reg></choice> corso&p2colon;</l>
            </lg>
            <lg type="dblvrs"><l n="13">Che <choice><orig>graue</orig><reg>grave</reg></choice> colpa fia <choice><orig>dambeduo</orig><reg>d’ambeduo</reg></choice> noi&p2c;</l> 
               <l n="14">Et tanto &piu; de <choice><orig>uoi</orig><reg>voi</reg></choice>&v2c; &quanto; &piu; <choice><orig>uama</orig><reg>v’ama</reg></choice>.</l></lg>
                </lg>
         </lg>
         
        <lg xml:id="rvf022" type="sestina" n="22"  rendition="#columns_2">
            <cb n="1-of-2"/>

           <l n="1" corresp="#canvasline"><choice><orig><hi rendition="#blue #fs24pt">A</hi><hi rendition="#small-caps">q</hi>ual<choice><abbr>ū</abbr><expan>un</expan></choice>que</orig><reg><hi rendition="#blue #fs24pt">A</hi> <hi rendition="#small-caps">q</hi>ualunque</reg></choice> animale alberga &in; terra<supplied>,</supplied></l>
          <l n="2" corresp="#canvasline">Se &non; se <choice><orig>alquāti</orig><reg>alquanti</reg></choice> <choice><orig><choice><orig>chāno</orig><reg>channo</reg></choice></orig><reg>ch’ànno</reg></choice> &in; odio il sole<supplied>,</supplied></l>
          <l n="3" corresp="#canvasline"><choice><abbr>Tēpo</abbr><expan>Tempo</expan></choice> da <choice><orig>trauagliare</orig><reg>travagliare</reg></choice> &e; <choice><orig>qñto</orig><reg>quanto</reg></choice> <choice><orig>el</orig><reg>è ’l</reg></choice> &giorno;.</l>
          <l n="4" corresp="#canvasline">Ma poi <choice><orig>chel</orig><reg>che 'l</reg></choice> ciel <choice><orig>accēde</orig><reg>accende</reg></choice> le sue stelle<supplied>,</supplied></l>
           <l n="5" corresp="#canvasline">Qual torna a casa<choice><orig>.</orig><reg/></choice> &amp7; <choice><orig>q&#x0303;l</orig><reg>qual</reg></choice> <choice><orig>sanida</orig><reg>s’anida</reg></choice> &in; <choice><orig>selua</orig><reg>selva</reg></choice><supplied>,</supplied></l>
         <!-- Couldn't find a character: q with tilde over it/over two letters -->
           <l n="6" corresp="#canvasline">&Per; <choice><orig>auer</orig><reg>aver</reg></choice> posa al meno in fin a <choice><orig>lalba</orig><reg>l’alba</reg></choice>.</l>
               <l n="7" corresp="#canvasline"><hi rendition="#red #fs24pt">&pilcrow2section;</hi>Et io<supplied>,</supplied> da che comincia la bella alba</l>
           <l n="8" corresp="#canvasline">A scuoter <choice><orig>lombra</orig><reg>l’ombra</reg></choice> intorno <choice><orig>dela</orig><reg>de la</reg></choice> terra</l>
           <l n="9" corresp="#canvasline"><choice><orig><abbr>Sugeliādo</abbr><expan>Sugeliando</expan></orig><reg>Svegliando</reg></choice> gli animali &in; ogni <choice><orig>selua</orig><reg>selva</reg></choice><choice><orig> <g ref="#virgsusp"/></orig><reg>,</reg></choice></l>
           <l n="10" corresp="#canvasline">&Non; <choice><orig>o</orig><reg>ò</reg></choice> mai triegua di sospir<supplied>’</supplied> col sole.</l>
           <l n="11" corresp="#canvasline">Poi <choice><orig><abbr>quādio</abbr><expan>quandio</expan></orig><reg>quand’io</reg></choice> <choice><orig>ueggio</orig><reg>veggio</reg></choice> <choice><orig>fiāmeggiar</orig><reg>fiammeggiar</reg></choice> le stelle</l>
               <l n="12" corresp="#canvasline">Vo <choice><orig>lagrimādo</orig><reg>lagrimando</reg></choice>. &amp7; disiando il giorno.</l>
               <l n="13" corresp="#canvasline"><hi rendition="#blue #fs24pt">&pilcrow2section;</hi>&Quando; la sera scaccia il chiaro &giorno;<choice><orig> /</orig><reg/></choice></l>
               <l n="14" corresp="#canvasline">Et le tenebre nostre altrui <choice><orig>fāno</orig><reg>fanno</reg></choice> alba&v2c;</l>
               <l n="15" corresp="#canvasline">Miro pensoso le crudeli stelle</l>
               <l n="16" corresp="#canvasline">Che <choice><orig><abbr>māno</abbr><expan>manno</expan></orig><reg>m’ànno</reg></choice> facto di sensibil terra.</l>
           <l n="17" corresp="#canvasline">Et maledico il <choice><orig>di</orig><reg>dì</reg></choice> <choice><orig>chi</orig><reg>ch’i</reg></choice><supplied>’</supplied> <choice><orig>uidil sole</orig><reg>vidi ’l sole</reg></choice><supplied>,</supplied></l>
               <l n="18" corresp="#canvasline">Che mi fa &in; <choice><orig>uista</orig><reg>vista</reg></choice> un huom nuditro <choice><orig><abbr>īselua</abbr><expan>inselua</expan></orig><reg>in selva</reg></choice>.</l>
               <l n="19" corresp="#canvasline"><hi rendition="#red #fs24pt">&pilcrow2section;</hi>&Non; credo che pascesse mai &per; <choice><orig>selua</orig><reg>selva</reg></choice></l>
               <l n="20" corresp="#canvasline">&Si; aspra fera&v2c; o di nocte o di giorno&v2c;</l>
          <l n="21" corresp="#canvasline">Come costei <choice><orig>chi</orig><reg>ch’i’</reg></choice> <choice><abbr>piāgo</abbr><expan>piango</expan></choice> <choice><orig><abbr>alōbra</abbr><expan>alombra</expan></orig><reg>a l’ombra</reg></choice><choice><orig>|</orig><reg/></choice> e al sole.</l>
               <l n="22" corresp="#canvasline">Et &non; mi stancha <choice><abbr>ṗmo</abbr><expan>primo</expan></choice> <choice><abbr>sōno</abbr><expan>sonno</expan></choice> <choice><orig>odalba.</orig><reg>od alba</reg></choice><supplied>,</supplied></l>
               <l n="23" corresp="#canvasline"><choice><orig>Che</orig><reg>Ché</reg></choice><supplied>,</supplied> ben <choice><orig>chi</orig><reg>ch’i</reg></choice><supplied>’</supplied> sia mortal corpo di terra&v2c;</l>
         
         <cb n="2-of-2"/>
            <l n="24">Lo mio fermo desir <choice><orig>uien</orig><reg>vien</reg></choice> da le stelle.</l>
            <l n="25"><hi rendition="#blue #fs24pt">&pilcrow2section;</hi>Prima <choice><orig>chi</orig><reg>ch’i</reg></choice><supplied>’</supplied> torni a <choice><orig>uoi</orig><reg>voi</reg></choice><supplied>,</supplied> <choice><abbr>lucēti</abbr><expan>lucenti</expan></choice> stelle<supplied>,</supplied></l>
           <l n="26">O tomo <choice><orig>giu</orig><reg>giù</reg></choice> <choice><orig>nelamorosa</orig><reg>ne l’amorosa</reg></choice> <choice><orig>selua</orig><reg>selva</reg></choice><supplied>,</supplied></l>
            <l n="27">Lassando il corpo che fia trita terra&p2c;</l>
           <l n="28"><choice><orig>Vedessio</orig><reg>Vedess’io</reg></choice> &in; lei <choice><orig>pieta</orig><reg>pietà</reg></choice> <choice><orig><abbr>chē</abbr><expan>chen</expan></orig><reg>che ’n</reg></choice> un sol giorno</l>
           <l n="29"><choice><orig>Puo</orig><reg>Può</reg></choice> ristorar <choice><orig><abbr>moltāni</abbr><expan>moltanni</expan></orig><reg>molt’anni</reg></choice>&p2c; <choice><orig><abbr>enāçi</abbr><expan>enançi</expan></orig><reg>e ’nanzi</reg></choice> <choice><orig>lalba</orig><reg>l’alba</reg></choice></l>
            <l n="30"><choice><abbr>Puōmi</abbr><expan>Puommi</expan></choice> <choice><orig>a richir</orig><reg>arichir</reg></choice> dal <choice><abbr>tramōtar</abbr><expan>tramontar</expan></choice> del sole.</l>
           <l n="31"><hi rendition="#red #fs24pt">&pilcrow2section;</hi>Con lei <choice><orig>fossio</orig><reg>foss’io</reg></choice> da che si parte il sole&p2c;</l>
           <l n="32">Et &non; ci <choice><orig>uedessaltri</orig><reg>vedess’altri</reg></choice> che le stelle&p2c;</l>
            <l n="33">Sol una nocte&p2c; &amp7; mai &non; fosse <choice><orig>lalba</orig><reg>l'alba</reg></choice>&p2c;</l>
            <l n="34">Et &non; se transformasse &in; <choice><orig>uerde</orig><reg>verde</reg></choice> <choice><orig>selua</orig><reg>selva</reg></choice></l>
           <l n="35">&Per; uscirmi di braccia <choice><orig><g ref="#virgsusp"/></orig><reg/></choice> come il giorno</l>
           <l n="36"><choice><orig>Chapollo</orig><reg>Ch’Apollo</reg></choice> la seguia qua <choice><orig>giu</orig><reg>giù</reg></choice> &per; terra.</l>
           <l n="37"><hi rendition="#blue #fs24pt">&pilcrow2section;</hi>Ma io <choice><orig>sa<subst><del><gap reason="erasure"/></del><add>ro</add></subst></orig><reg>sarò</reg></choice> sotterra &in; secca <choice><orig>selua</orig><reg>selva</reg></choice>&p2c;</l>
           <l n="38"><choice><orig>El</orig><reg>E ’l</reg></choice> giorno <choice><orig>andra</orig><reg>andrà</reg></choice> pien di minute stelle</l>
           <l n="39">Prima <choice><orig>cha</orig><reg>ch’a</reg></choice> &si; dolce alba <choice><orig>arriui</orig><reg>arrivi</reg></choice> <choice><orig>ilsole</orig><reg>il sole</reg></choice>.</l>     
         
