        <body>
            <pb n="charta 32 recto" facs="../images/vat-lat3195-f/vat-lat3195-f-032r.jpg"/>
            <lg xml:id="rvf140" type="sonnet" n="140">
                <lg type="octave">
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="1"><hi rendition="#red #fs24pt">A</hi><hi rendition="#small-caps">m</hi>or<supplied>,</supplied> che nel penser mio <choice><orig>uiue</orig><reg>vive</reg></choice> &amp7; regna<choice><orig>.</orig><reg/></choice></l>
                        <l n="2"><choice><orig>El</orig><reg>E ’l</reg></choice> suo seggio maggior nel mio cor tene&p2c;</l>
                    </lg>
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="3">Talor armato ne la fronte <choice><orig>uene</orig><reg>vene</reg></choice>&v2c;</l>
                        <l n="4"><choice><orig>Iui</orig><reg>Ivi</reg></choice> si loca<choice><orig> &virg;</orig><reg>, </reg></choice>&amp7; <choice><orig>iui</orig><reg>ivi</reg></choice> pon sua insegna.</l> <!-- check this virg -->
                    </lg>
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="5">Quella <choice><orig>chamare</orig><reg>ch’amare</reg></choice> et sofferir <choice><orig><abbr>nēsegna</abbr><expan>nensegna</expan></orig><reg>ne ’nsegna</reg></choice></l>
                        <l n="6">E <choice><orig>uol</orig><reg>vol</reg></choice> <choice><orig>chel</orig><reg>che ’l</reg></choice> gran desio <choice><orig>laccesa</orig><reg>l’accesa</reg></choice> spene<supplied>,</supplied></l>
                    </lg>
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="7">Ragion&v2c; <choice><orig>uergogna</orig><reg>vergogna</reg></choice> &amp7; <choice><orig><abbr>reuerēça</abbr><expan>reuerença</expan></orig><reg>reverenza</reg></choice> affrene&p2c;</l>
                        <l n="8">Di nostro ardir fra se stessa si sdegna.</l>
                    </lg>
                </lg>
                <lg type="sestet">
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="9">Onde <choice><orig>amor</orig><reg>Amor</reg></choice> <choice><orig>pauentoso</orig><reg>paventoso</reg></choice> fugge al core<supplied>,</supplied></l>
                        <l n="10">Lasciando ogni sua <choice><abbr>īpresa</abbr><expan>impresa</expan></choice>&p2c; &amp7; <choice><abbr>piāge</abbr><expan>piange</expan></choice> &amp7; trema&p2semicolon;</l>
                    </lg>
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="11"><choice><orig>Iui</orig><reg>Ivi</reg></choice> <choice><orig>sasconde</orig><reg>s’asconde</reg></choice>&p2c; et non appar &piu; fore.</l>
                        <l n="12">Che <choice><orig>possio</orig><reg>poss’io</reg></choice> far<supplied>,</supplied> temendo il mio signore&p2c;</l>
                    </lg>
                    <lg type="dblvrs" corresp="#canvasline">
                        <l n="13">Se non star seco in fin a <choice><orig>lora</orig><reg>l’ora</reg></choice> extrema<choice><orig>.</orig><reg>?</reg></choice></l>
                        <l n="14"><choice><orig>Che</orig><reg>Ché</reg></choice> bel fin fa chi ben amando more.</l>
                    </lg>
                </lg>
            </lg>
            <space corresp="#canvasline"/>
            
            <lg xml:id="rvf141" type="sonnet" n="141">
                <lg type="octave">
                <lg type="dblvrs" corresp="#canvasline">
                    <l n="1"><hi rendition="#blue #fs24pt">C</hi><hi rendition="#small-caps">o</hi>me talora al caldo tempo sole</l>
                    <l n="2">Semplicetta farfalla al lume <choice><orig>aueçça</orig><reg>avezza</reg></choice></l>
                </lg>
                <lg type="dblvrs" corresp="#canvasline">
                    <l n="3">Volar <choice><orig>ne gliocchi</orig><reg>negli occhi</reg></choice> altrui per sua <choice><orig>uagheçça</orig><reg>vaghezza</reg></choice>&p2c;</l>
                    <l n="4">Onde <choice><orig>auen</orig><reg>aven</reg></choice> <choice><orig>chella</orig><reg>ch’ella</reg></choice> more&p2c; altri si dole&p2semicolon;</l>
                </lg>
                <lg type="dblvrs" corresp="#canvasline">
                    <l n="5"><choice><orig>Cosi</orig><reg>Così</reg></choice> &sempre; io corro al fatal mio sole</l>
                    <l n="6"><choice><orig>De gliocchi</orig><reg>Degli occhi</reg></choice><choice><orig>.</orig><reg/></choice> onde mi <choice><orig>uen</orig><reg>ven</reg></choice> tanta <choice><orig>dolceçça</orig><reg>dolcezza</reg></choice></l>
                </lg>
                <lg type="dblvrs" corresp="#canvasline">
                    <l n="7"><choice><orig>Chel</orig><reg>Che ’l</reg></choice> fren de la ragion <choice><orig>amor</orig><reg>Amor</reg></choice> &non; <choice><orig>preçça</orig><reg>prezza</reg></choice>&p2c;</l>
                    <l n="8">E chi discerne &e; <choice><orig>uinto</orig><reg>vinto</reg></choice> da chi <choice><orig>uole</orig><reg>vole</reg></choice>.</l>
                </lg>
            </lg>
            <lg type="sestet">
                <lg type="dblvrs" corresp="#canvasline">
                    <l n="9">E <choice><orig>ueggio</orig><reg>veggio</reg></choice> ben <choice><orig><abbr>quātelli</abbr><expan>quantelli</expan></orig><reg>quant’elli</reg></choice> a <choice><orig>schiuo</orig><reg>schivo</reg></choice> <choice><orig><abbr>māno</abbr><expan>manno</expan></orig><reg>m’anno</reg></choice>&p2c;</l>
                    <l n="10">E so <choice><orig>chi</orig><reg>ch’i’</reg></choice> ne <choice><orig>morro</orig><reg>morrò</reg></choice> <choice><orig>ueracemente</orig><reg>veracemente</reg></choice>&p2c;</l>
                </lg>
                <lg type="dblvrs" corresp="#canvasline">
