      <body>
         <pb n="charta 60 recto" facs="../images/vat-lat3195-f/vat-lat3195-f-060r.jpg" /> <!-- Change the number of the charta in both places "charta 1 verso" and -f-0001v.jpg", according to the charta to be encoded -->
          <lg type="sonnet" xml:id="rvf301" n="301"> <!-- Change the sonnet xml:id and number according to the sonnet to be encoded -->
              <lg type="octave">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="1"><hi rendition="#red #fs24pt">U</hi><hi rendition="#small-caps">a</hi>lle che <choice><orig>de</orig><reg>de’</reg></choice> lamenti miei se piena<supplied>,</supplied></l> <!-- Change initial color (red or blue) according to the initials of the sonnet to be encoded -->
                      <l n="2">Fiume che spesso del mio pianger cresci<choice><orig> .</orig><reg>,</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="3">Fere <choice><orig>seluestre</orig><reg>selvestre</reg></choice><choice><orig> &virg;</orig><reg>,</reg></choice> <choice><orig>uaghi</orig><reg>vaghi</reg></choice> augelli &amp7; pesci<choice><orig> &virg;</orig><reg>,</reg></choice></l>
                      <l n="4">Che luna &amp7; laltra uerde riua affre<subst><del type="erasure"><gap reason="illegible"/><add>n</add></del></subst>a .</l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="5">Aria <choice><orig>de</orig><reg>de’</reg></choice> miei <choice><orig>sospir</orig><reg>sospir’</reg></choice> calda &amp7; serena<choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="6">Dolce sentier che <choice><orig>si</orig><reg>sì</reg></choice> amaro riesci<choice><orig> .</orig><reg>,</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="7">Colle che mi piacesti<choice><orig> &virg;</orig><reg>,</reg></choice> or mi rincresci<choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="8"><choice><orig>Ouanchor</orig><reg>Ov’ anchor</reg></choice> &per; <choice><orig>usança</orig><reg>usanza</reg></choice> <choice><orig>amor</orig><reg>Amor</reg></choice> mi mena<choice><orig>.</orig><reg>,</reg></choice></l>
                  </lg>
              </lg>
              <lg type="sestet">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="9"><hi rendition="#sestet_maker">~</hi> Ben riconosco in <choice><orig>uoi</orig><reg>voi</reg></choice> <choice><orig>lusate</orig><reg>l’usate</reg></choice> forme <choice><orig><subst><del type="erasure"><gap reason="illegible"/><add>.</add></del></subst></orig><reg>,</reg></choice></l>
                      <l n="10">Non<supplied>,</supplied> lasso<supplied>!,</supplied> in me<choice><orig> .</orig><reg>,</reg></choice> che da <choice><orig>si</orig><reg>sì</reg></choice> lieta <choice><orig>uita</orig><reg>vita</reg></choice></l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="11">Son fatto albergo <choice><orig>dinfinita</orig><reg>d’infinita</reg></choice> doglia<choice><orig> .</orig><reg>.</reg></choice></l>
                      <l n="12"><choice><abbr>Quīci</abbr><expan>Quinci</expan></choice> <choice><orig>uedeal</orig><reg>vedea ’l</reg></choice> mio bene<choice><orig> .</orig><reg>; </reg></choice>&amp7; &per; <choice><abbr>&q-macron;ste</abbr><expan>queste</expan></choice> orme</l>
                  </lg>
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="13">Torno a <choice><orig>uedere&virg;</orig><reg>vedere</reg></choice> <choice><orig>ondal</orig><reg>ond’al</reg></choice> ciel nuda <choice><orig>e</orig><reg>è</reg></choice> gita<choice><orig> .</orig><reg>,</reg></choice></l>
                      <l n="14"><choice><abbr>Lasciādo</abbr><expan>Lasciando</expan></choice> in terra la sua bella spoglia<choice><orig> .</orig><reg>.</reg></choice></l>
                  </lg>
              </lg>
          </lg>
          <space corresp="#canvasline"/>
          <lg xml:id="rvf302" type="sonnet" n="302"> <!-- Change the sonnet xml:id and number according to the sonnet to be encoded -->
              <lg type="octave">
                  <lg type="dblvrs" corresp="#canvasline">
                      <l n="1"><choice><orig><choice><abbr><hi rendition="#blue #fs24pt">L</hi><hi rendition="#small-caps">e</hi>uōmi</abbr><expan><hi rendition="#blue #fs24pt">L</hi><hi rendition="#small-caps">e</hi>uommi</expan></choice></orig><reg>Levommi</reg></choice> il mio penser &in; parte <choice><orig>ouera</orig><reg>ov’era</reg></choice></l> <!-- Change initial color (red or blue) according to the initiasl of the sonnet to be encoded -->
                      <l n="2">Quella <choice><orig>chio</orig><reg>ch’io</reg></choice> cerco<choice><orig> .</orig><reg>, </reg></choice>&amp7; &non; ritrouo &in; terra<choice><orig> .</orig><reg>;</reg></choice></l>
